@model IEnumerable<Task_1.Models.Product>
<html>
<body>
    <table class="table table-bordered table-hover table-striped">
        <style>
            table {
                background-color: darkgoldenrod;
            }
        </style>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>

            </tr>
        }


    </table>
</body>
</html>
